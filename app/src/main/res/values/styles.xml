<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <!-- Aquí estoy definiendo el estilo que va a tener mi splashscreen-->
    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">
            @drawable/splashscreen
        </item>
    </style>

    <!-- Aquí estoy cambiando el color y tamaño de los elementos Hint de los TextInputLayout-->
   <!-- <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>-->

    <!-- Aquí estoy cambiando el color y tamaño de los Switch tipo MaterialSwitch-->
    <style name="MaterialSwitch" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="thumbTint">@color/colorAccent</item>
    </style>


</resources>